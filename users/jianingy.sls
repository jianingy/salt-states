# -*- mode: yaml -*-

{% set user_id = 'jianingy' %}
{% set user_home = pillar['users'][user_id]['home'] %}


{{ user_id }}:
  user.present:
    - fullname: Jianing Yang
    - password: {{ pillar['users']['jianingy']['password'] }}
    - shell: /bin/zsh
    - home: {{ user_home }}
    - createhome: False
    - groups:
      - sudo

create_home_manually:
  cmd.run:
    - name: mkdir {{ user_home }} && chown {{ user_id }}:{{user_id}} {{ user_home }}
    - unless: test -d {{ user_home}}
    - require:
      - user: jianingy

  ssh_auth:
    - present
    - user: {{ user_id }}
    - names:
      - ssh-rsa  jianingy@thinkpad
      - ssh-dss  jianingy@thinkpad
    - require:
      - cmd: create_home_manually

vcsh_init:
  cmd.run:
    - name: vcsh clone https://github.com/jianingy/dotfiles-mr mr
    - user: {{ user_id }}
    - cwd: {{ user_home }}
    - unless: test -d {{ user_home}}/.config/vcsh/repo.d/mr.git
    - require:
      - cmd: create_home_manually

vcsh_update:
  cmd.run:
    - name: mr update
    - user: {{ user_id }}
    - cwd: {{ user_home }}
    - require:
      - cmd: vcsh_init
